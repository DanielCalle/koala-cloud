{% extends "base.twig" %}

{% block content %}
    <script src="js/user.js"></script>
    <div class="contenedor-centrado">
        <header>
            <div class="cabecera">
                <div class="logo">
                    <a href="./"><img alt="logo" src="images/logo.png"></a>
                </div>
                <div class="menu-cabecera">
                    <a href="contacto">Contacto</a>
                </div>
            </div>
        </header>
    </div>
    <div class="contenedor" style="margin-top: 125x;">
        <div class="contenedor-centrado">
            <table>
                <thead>
                    <tr>
                        <th class="cabecera-tabla">Email</th>
                        <th class="cabecera-tabla">Nombre</th>
                        <th class="cabecera-tabla">Fecha de nacimiento</th>
                        <th class="cabecera-tabla">Permiso</th>
                        <th class="cabecera-tabla"></th>
                    </tr>
                </thead>
                <tbody id="tableConteiner">
                {% for user in users %}
                    <tr data-userid="{{ user.id|e }}">
                        <th>{{ user.email|e }}</th>
                        <th>{{ user.nombre|e }}</th>
                        <th>{{ user.fechaNacimiento|e }}</th>
                        <th>
                            <button class="roleUser">
                                {% if user.permiso %}
                                    Admin
                                {% else %}
                                    User
                                {% endif %}
                            </button>
                        </th>
                        <th><button class="remove">Borrar</button></th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="contenedor gris" style="margin-top: 150px;">
        <div class="contenedor-centrado">
            <hr style="width: 100%; float: left;">
            <div class="col-30">
                <div class="padd">
                    <h2 class="text-footer">Acerca de nosotros</h2>
                    <h2 class="text-footer2">Nuestro equipo</h2>
                    <h2 class="text-footer2">Marcas</h2>
                    <h2 class="text-footer2">Empleos</h2>
                </div>
            </div>
            <div class="col-30">
                <div class="padd">
                    <h2 class="text-footer">Asistencia</h2>
                    <h2 class="text-footer2">Copyright</h2>
                    <h2 class="text-footer2">Donde estamos</h2>
                    <h2 class="text-footer2">Centro de ayuda</h2>
                </div>
            </div>
            <div class="col-30">
                <div class="padd">
                    <h2 class="text-footer">Comunidad</h2>
                    <h2 class="text-footer2">Twitter</h2>
                    <h2 class="text-footer2">Facebook</h2>
                    <h2 class="text-footer2">Foro</h2>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
